{
  "name": "Schoology Assignment Hider",
  "description": "Help hide assingments",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {"128": "icon_128.png"},
  "browser_action":{
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://bca.schoology.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Bear"
  }
}
